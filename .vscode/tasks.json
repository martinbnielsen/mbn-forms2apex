{
    "version": "2.0.0",

    // Run sqlplus via a batch file
    "windows": {
        "command": "_run_sqlplus.bat"
    },
    "osx": {
        "command": "./_run_sqlcl.sh"
    },
    "linux": {
        "command": "./_run_sqlcl.sh"
    },

    // first argument is the database connection string
    // second argument is the file to execute (ie the current file)
    "args": [
        "/@forms2apex",
        "@\"${file}\""
    ],

    // use this to get any database errors (from user_errors view) listed in the "Problems" pane in VS Code
    "problemMatcher": {
        "owner": "plsql",
        "fileLocation": ["relative", "${fileDirname}"],
        "pattern": [
          {
            "regexp": "(.*) (\\d*)\/(\\d*) (.*?) (.*)",
            "severity": 1,
            "line": 2,
            "column": 3,
            "file": 4,
            "message": 5,
            "loop": true
        }
      ]
    },
    "tasks": [
        {
            "label": "./_run_sqlcl.sh",
            "type": "shell",
            "args": [
                "/@forms2apex",
                "@\"${file}\""
            ],
            "problemMatcher": {
                "owner": "plsql",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ],
                "pattern": [
                    {
                        "regexp": "(.*) (\\d*)/(\\d*) (.*?) (.*)",
                        "severity": 1,
                        "line": 2,
                        "column": 3,
                        "file": 4,
                        "message": 5,
                        "loop": true
                    }
                ]
            },
            "group": {
                "_id": "build",
                "isDefault": false
            }
        }
    ]
}